				{
					"name": "CheckStatus",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"\r",
									"\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"// Declare a common response variable\r",
									"let response = pm.response.json();\r",
									"\r",
									"pm.test(\"Response is an object\", function () {\r",
									"    pm.expect(response).to.be.an('object');\r",
									"});\r",
									"\r",
									"pm.test(\"Response contains 'status' property\", function () {\r",
									"    pm.expect(response).to.have.property('status');\r",
									"});\r",
									"\r",
									"pm.test(\"'status' is a string\", function () {\r",
									"    pm.expect(response.status).to.be.a('string');\r",
									"});\r",
									"\r",
									"pm.test(\"'status' is not null\", function () {\r",
									"    pm.expect(response.status).to.not.be.null;\r",
									"});\r",
									"\r",
									"// The value of 'status' should not be validated as it can be dynamic.\r",
									"pm.test(\"'status' value is 'UP'\", function () {\r",
									"    pm.expect(response.status).to.equal('UP');\r",
									"});\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
